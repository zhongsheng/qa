<h3>搜索结果</h3>
<div class='qa-list container-fluid'>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">任务</th>
                    <th scope="col">项目</th>
                    <th scope="col">状态</th>
                    <th scope="col">创建时间</th>
                    <th scope="col">截止时间</th>
                </tr>
            </thead>
            <tbody>

        <% @tasks.each_with_index do |task, i| %>
            <tr>
                <td>
                    <%= i+1 %>
                </td>
                <td>
                    <%=link_to(theme_task_path(task.theme, task)) do %>
                        <%= task.name %>
                    <% end %>
                </td>
                <td>
                    <%= task.theme.name %>
                </td>
                <td>
                    <%= task.status %>
                </td>
                <td>
                    <%= task.created_at.to_s(:short) %>
                </td>
                <td>
                    <%= task.deadline %>
                </td>
            </tr>

        <% end %>
            </tbody>
        </table>

    </div>
